    separator_color = frame

    sort = yes
    idle_threshold = 0

    font = Monospace 8
    line_height = 0
    markup = full
    format = "<b>%s %p</b>\n%b"

    alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    icon_position = off
    max_icon_size = 32
    icon_path = /usr/share/icons/Arc/status/16/:/usr/share/icons/Arc/devices/16/

    sticky_history = yes
    history_length = 20

    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    always_run_script = true

    title = Dunst
    class = Dunst
    startup_notification = false
    # TODO: update xrandr to 1.5
    force_xinerama = true


